<div class="container pt-4">
  <h2><%= t('devices.devices_users_relations') %></h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= DevicesUsersRelation.human_attribute_name('user') %></th>
        <th><%= DevicesUsersRelation.human_attribute_name('assignment_date') %></th>
        <th><%= DevicesUsersRelation.human_attribute_name('deassignment_date') %></th>
      </tr>
    </thead>
    <tbody>
      <%@device.devices_users_relations.sort_by{|dur| dur.assignment_date}.each do |relation| %>
        <tr>
          <td><%= relation.user.display_name %></td>
          <td><%= relation.assignment_date.strftime('%d/%m/%Y') %></td>
          <td><%= relation.deassignment_date.try(:strftime, '%d/%m/%Y') %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>