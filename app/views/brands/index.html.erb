<div class="container">
  <div class="row">
    <div class="col-9">
      <!-- Listado marcas -->
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col"><%= Brand.human_attribute_name('description') %></th>
            <th scope="col"><%= t('brands.models_count') %></th>
          </tr>
        </thead>
        <tbody>
          <% @brands.each do |brand| %>
            <tr>
              <td><%= link_to brand.description, brand %> </td>
              <td><%= link_to brand.models.count, brand %> </td>
            </tr>
          <%end%>
        </tbody>
      </table>
       <!-- Fin listado marcas -->
    </div>
    <div class="col-3">
      <!-- Menú lateral -->
      <div class="mx-auto" style="width: 82px;">
        <%= button_to t('actions.new'), new_brand_path, method: :get, class: 'btn btn-primary' %>
      </div>
      <!-- Fin menú lateral -->
    </div>
  </div>
</div>