<div class="container">
  <div class="row">
    <div class="col-9">
      <!-- Datos -->
      <h1><%= @brand.display_name %></h1>
      <dl>
        <dt><%= Brand.human_attribute_name('description') %></dt>
        <dd><%= @brand.description %></dd>
      </dl>
      <!-- Fin datos -->
      <!-- Listado de modelos -->
      <div>
        <%= render "models/models" %>
      </div>
      <!-- Fin de listado de modelos -->
    </div>
    <div class="col-3">
      <!-- Menú lateral -->
      <div class="mx-auto">
        <%= go_back_link(brands_path) %>
        <hr>
        <%= button_to t('actions.edit'), edit_brand_path, method: :get, class: 'btn btn-primary' %>
        <br />
        <%= button_to t('actions.delete'), brand_path, method: :delete, class: 'btn btn-primary', data: {confirm: t('actions.confirm_question')} %>
      </div>
      <!-- Fin menú lateral -->
    </div>
  </div>
</div>