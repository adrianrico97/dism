<div class="pt-4">
  <%= form_for @program do |f| %>
    <!-- Mostrar erros -->
    <%= render 'common/show_errors', :object => @program %>
    <!-- Formulario -->
    <div class="h-100 justify-content-center align-items-center">
      <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :version %><br>
        <%= f.text_field :version, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :observations %><br>
        <%= f.text_area :observations, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= submit_tag t('actions.save'), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>