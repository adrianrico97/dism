<div class="container h-100 mt-5">
  <div class="row">
    <div class="col-9">
      <!-- Formulario -->
      <h1 class="text-left"><%= @device.display_name %></h1>
      <div class="container">
        <h4 class="text-left"><%= @issue.title %></h4>
        <p class="text-left"><%= @issue.description %></p>
      </div>
      <h3 class="text-left"><%= t('trackings.new') %></h3>
      <%= render 'form' %>
      <!-- Fin formulario -->
    </div>
    <div class="col-3">
      <!-- Menú lateral -->
      <%= go_back_link(device_issue_path(@device, @issue)) %>
      <!-- Fin menú lateral -->
    </div>
  </div>
</div>